\RequirePackage{fontspec}

% Font import
\setsansfont{Nimbus Sans}
\setmonofont{Nimbus Mono PS}

% Settings

% Title page
\setbeamerfont{title in titlepage}{size*={40pt}{15pt}, series=\bfseries}
\setbeamerfont{author in titlepage}{size=\small}
\setbeamerfont{institute in titlepage}{parent=author in titlepage}
\setbeamerfont{date in titlepage}{parent=author in titlepage}

% Section pages

% Main pages
\setbeamerfont{section title}{size=\LARGE, series=\bfseries}
\setbeamerfont{subsection title}{size=\large, series=\bfseries}

\setbeamerfont{block title}{size=\normalsize, series=\bfseries}
\setbeamerfont{block title alerted}{size=\normalsize, series=\bfseries}

%\setbeamerfont*{subtitle}{size=\large}
\setbeamerfont{frametitle}{size=\Large, series=\bfseries}
\setbeamerfont{framesubtitle}{parent=frametitle, size=\normalsize}


% Figure caption
\setbeamerfont{caption}{size=\small}
\setbeamerfont{caption name}{series=\bfseries}
\setbeamerfont{description item}{series=\bfseries}

% Header and footer
\setbeamerfont{page number in footline}{size=\tiny}

% Itemize and enumerate

\setbeamerfont{itemize/enumerate body}{size=\small}
\setbeamerfont{itemize/enumerate subbody/subsubbody}{size=\footnotesize}


% Bibliography
\setbeamerfont{bibliography entry author}{size=\normalsize, series=\normalfont}
\setbeamerfont{bibliography entry title}{size=\normalsize, series=\bfseries}
\setbeamerfont{bibliography entry location}{size=\normalsize, series=\normalfont}
\setbeamerfont{bibliography entry note}{size=\small, series=\normalfont}

\setbeamerfont{standout}{size=\Large, series=\bfseries}



